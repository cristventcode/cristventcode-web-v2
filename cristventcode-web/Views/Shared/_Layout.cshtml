<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>cristventcode</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/custom-theme.css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://fonts.googleapis.com/css?family=Lato|Work+Sans:800" rel="stylesheet">
    <script src="https://use.fontawesome.com/250d8ef9b6.js"></script>
</head>
<body>
    <header>
        <div class="navbar navbar-custom">
            <div class="">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("cristventcode", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Skills", "Skills", "Home")</li>
                        <li>@Html.ActionLink("Projects", "Projects", "Home")</li>
                    </ul>

                </div>
            </div>
        </div>
    </header>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="col-xs-12">
            <p>&copy; @DateTime.Now.Year - cristventcode</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
