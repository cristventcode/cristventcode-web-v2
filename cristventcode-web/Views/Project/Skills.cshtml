@model IEnumerable<cristventcode_web.Models.Skill>

@{
    ViewBag.Title = "Skills";
}

<h2> @ViewBag.ProjectTitle</h2>
@Html.ActionLink("Back to Projects", "Index")
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="">
        <div class="form-group">
            <label class="control-label">Skill</label>
            <div class="">
                <input class="form-control text-box single-line" id="Name" name="Name" type="text" value="">
            </div>
        </div>

        <div class="form-group hidden">
            <label class="control-label">Project Id</label>
            <div class="">
                <input class="form-control text-box single-line" id="ProjectId" name="ProjectId" type="text" value="@ViewBag.ProjectId">
            </div>
        </div>

        <div class="form-group">
            <div class="">
                <input type="submit" value="Add Skill" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<h3> Skills</h3>
<div class="row">
    <div class="col-md-6">
        <ul class="list-group">
            @foreach (var skill in Model)
            {
                <li class="list-group-item">
                    <strong>@skill.Name</strong><span style="float:right">
                        @Html.ActionLink("Delete", "DeleteSkill", new { id = skill.SkillId })
                    </span>
                </li>
            }
        </ul>
    </div>
</div>

