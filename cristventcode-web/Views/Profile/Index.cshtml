@model cristventcode_web.Models.Profile

@{
    ViewBag.Title = "Index";
}

<div class="col-xs-12 large-holder">
    <div class="row">
        <div class="col-xs-12 col-md-2">
            <img id="edit-page-image" class="well" src="~/Content/images/personal-image.jpg" />
        </div>
        <div class="col-xs-12 col-md-5">
            <ul class="list-group">
                <li class="list-group-item">@Model.Name</li>
                <li class="list-group-item">@Model.Phone</li>
                <li class="list-group-item">@Model.Email</li>
                <li class="list-group-item">@Model.Location</li>
                <li class="list-group-item"><button class="btn btn-sm btn-default">Edit Info</button></li>
            </ul>
        </div>
        <div class="col-xs-12 col-md-5">
            <div class="panel panel-default">
                <div class="panel-heading">App Shortcuts</div>
                <div class="panel-body">
                    <ul class="list-group">
                        <li class="list-group-item">Work Assistant</li>
                        <li class="list-group-item">App 2</li>
                        <li class="list-group-item">App 3</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="edit-page-tabs">
                <h4>Manage Content</h4>
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#menu1">Projects</a> </li>
                    <li><a data-toggle="tab" href="#menu2">Writings</a></li>
                </ul>
                <div class="tab-content">
                    <div id="menu1" class="tab-pane fade in active">
                        <ul class="list-group">
                            @foreach (var project in Model.Projects)
                            {
                                <li class="list-group-item">@project.Title</li>
                            }

                        </ul>
                        <a href="~/Project/Index" class="btn btn-sm btn-default">Manage Projects</a>
                        <br />
                    </div>
                    <div id="menu2" class="tab-pane fade">
                        <ul class="list-group">
                            @if (Model.Writings.Count > 0)
                            {
                                foreach (var writing in Model.Writings)
                                {
                                    <li class="list-group-item">@writing.Title</li>
                                }
                            }
                        </ul>
                        <a href="~/Writing/Index" class="btn btn-sm btn-default">Manage Writings</a>
                        <br />
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
