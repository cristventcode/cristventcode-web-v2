@model IEnumerable<cristventcode_web.Models.Writing>
<div class="section-hero section-hero-small">
    <div class="hero">
        <div class="container">
            <div class="hero-text">
                <h1> Writings </h1>
                <p> Writings | Thoughts</p>
            </div>
        </div>
    </div>
</div>

<div class="col-xs-12 large-holder">
    <div class="col-md-9 card-holder">
        @foreach (var writing in Model)
        {
            <div class="col-xs-12 col-md-12 card">
                <div class="card-details">
                    <h3> @writing.Title</h3>
                    <hr />
                    <p> This holder is going to be used for a short description</p>
                </div>
            </div>
        }
    </div>
    <div class="col-xs-12 col-md-3 aside-holder">
        <div class="card-details">
            <ul class="list-group">
                <li class="list-group-item list-group-item-heading"> Recent </li>
                <li class="list-group-item list"> Lye Calculator</li>
                <li class="list-group-item"> Meetup Review</li>
                <li class="list-group-item"> Angular 2</li>
                <li class="list-group-item"> Item 4</li>
                <li class="list-group-item list-group-item-heading"> Quick Access | Contact </li>
                <li class="list-group-item list"> Resume</li>
                <li class="list-group-item list"> 678-933-1047</li>
                <li class="list-group-item list"> cristventcode@gmail.com</li>
            </ul>
        </div>
    </div>
</div>

